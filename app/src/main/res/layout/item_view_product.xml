<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/heith_item_activityViewproduct"
    android:layout_marginTop="@dimen/Margin_padding5"
    app:cardCornerRadius="8dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/top1"
            android:layout_width="@dimen/width_img_Item_activityViewproduct"
            android:layout_height="@dimen/heith_item_activityViewproduct"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_product_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/special_price_product_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/textview_backgroud"
                    android:text="-5%"
                    android:textColor="@color/mautrang"
                    android:textSize="@dimen/TextSize12"></TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/top4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/top1"
            android:paddingTop="@dimen/Margin_padding3"
            android:paddingRight="@dimen/Margin_padding5"
            android:paddingBottom="@dimen/Margin_padding3">

            <TextView
                android:textAllCaps="true"
                android:id="@+id/name_product_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Margin_padding8"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="ĐUÔI THĂNG BÒ ĐÔNG LẠNH - ĐUÔI THĂNG BÒ ĐÔNG LẠNH"
                android:textColor="@color/mauden"
                android:textSize="@dimen/TextSize13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_product_review">

                <TextView
                    android:id="@+id/sellprice_product_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/Margin_padding8"
                    android:gravity="center"
                    android:text="2.530.000 đ"
                    android:textColor="@color/maudo"
                    android:textSize="@dimen/TextSize12" />

                <TextView
                    android:id="@+id/sale_price_product_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="@dimen/Margin_padding8"
                    android:gravity="center"
                    android:text="2.530.000 đ"
                    android:textColor="#A3A2A2"
                    android:textSize="@dimen/TextSize10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/imfomation_view"
                    android:layout_width="@dimen/width_button_item_activityViewproduct"
                    android:layout_height="@dimen/heith_button_item_activityViewproduct"
                    android:layout_marginTop="@dimen/Margin_padding8"
                    android:layout_marginRight="@dimen/Margin_padding10"
                    android:background="@drawable/seeview"></ImageView>

                <ImageView
                    android:id="@+id/addcart_view"
                    android:layout_width="@dimen/width_button_item_activityViewproduct"
                    android:layout_height="@dimen/heith_button_item_activityViewproduct"
                    android:layout_marginTop="@dimen/Margin_padding8"
                    android:layout_marginRight="@dimen/Margin_padding10"
                    android:background="@drawable/cart_view"></ImageView>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>