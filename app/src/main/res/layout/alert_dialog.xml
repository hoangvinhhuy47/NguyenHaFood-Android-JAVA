<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/Margin_padding8"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/layout"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông Báo"
        android:textSize="@dimen/TextSize14"
        android:textColor="@color/mauden"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/Margin_padding8"
        />

    <ImageView
        android:id="@+id/exit"
        android:layout_width="@dimen/width_icon"
        android:layout_height="@dimen/heith_icon"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:scaleType="center"
        android:src="@mipmap/exit_black"
        android:layout_marginTop="@dimen/Margin_padding8"/>
<LinearLayout
    android:layout_marginTop="@dimen/Margin_padding15"
    android:layout_below="@+id/exit"
    android:background="@color/mauden"
    android:layout_width="match_parent"
    android:layout_height="@dimen/Margin_padding1">
</LinearLayout>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TEXTO"
        android:id="@+id/ttvTitle"
        android:layout_below="@+id/exit"
        android:layout_marginTop="@dimen/Margin_padding32"
        android:layout_marginLeft="@dimen/Margin_padding4"
        android:layout_marginRight="@dimen/Margin_padding4"
        android:layout_marginBottom="@dimen/Margin_padding16"
        android:textSize="@dimen/TextSize14"
        android:textColor="@color/mauxanh"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="@dimen/width_button_Dialog_rebuy_canceoder"
        android:layout_height="@dimen/heith_button_Dialog_rebuy_canceoder"
        android:text="OK"
        android:id="@+id/accept"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/ttvTitle"
        android:layout_marginBottom="@dimen/Margin_padding8"
        android:background="@drawable/button_muahang"
        android:layout_centerHorizontal="true"
        android:textColor="@color/mautrang" />

</RelativeLayout>