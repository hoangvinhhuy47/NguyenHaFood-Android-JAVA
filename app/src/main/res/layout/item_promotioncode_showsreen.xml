<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/Margin_padding4"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/backgroud_orderconfirmation"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/heith_Item_sanphamxacnahndonhang">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/width_imgproduct_Item_sanphamxacnahndonhang"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp">
            <ImageView
                android:id="@+id/img_promotioncode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_promotioncode"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="asd;lnkasdlnas"
            android:textSize="@dimen/TextSize13"
            android:textColor="@color/mauden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/text_promotioncode"
                android:id="@+id/qualiti_promotioncode"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="1"
                android:textSize="@dimen/TextSize13"
                android:textColor="@color/mauden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@+id/qualiti_promotioncode"
                android:id="@+id/price_promotioncode"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="1"
                android:textSize="@dimen/TextSize13"
                android:textColor="@color/mauden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
