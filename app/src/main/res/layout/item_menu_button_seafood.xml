<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/menu_item_btn"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    android:layout_width="wrap_content"
    style="@style/Clickable"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewa"
        android:layout_margin="4dp"
        app:cardCornerRadius="@dimen/Margin_padding48"
        android:layout_width="@dimen/Margin_padding48"
        android:layout_height="@dimen/Margin_padding48">
        <ImageView
            android:id="@+id/img_menu_item"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Btn_menu_sea"
        android:textSize="@dimen/TextSize11"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Title"
        android:layout_below="@id/cardViewa"
        android:textAlignment="center"
        android:textColor="@color/mauden"
        android:layout_width="@dimen/Margin_padding48"
        android:layout_height="@dimen/Margin_padding24"
        android:gravity="center_horizontal" />

</RelativeLayout>