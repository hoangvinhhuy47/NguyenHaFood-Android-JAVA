<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/mautrang"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/topcontent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heith_content_Dialog_exitapp"
        android:background="@color/maucam">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="thông báo"
            android:textAllCaps="true"
            android:textColor="@color/mautrang"
            android:textSize="@dimen/TextSize15" />

        <ImageView
            android:id="@+id/img_dialog_eixt"
            android:layout_width="@dimen/width_icon"
            android:layout_height="@dimen/heith_icon"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/Margin_padding8"
            android:background="@mipmap/exit" />
    </RelativeLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/heith_top1_Dialog_exitapp"
        android:layout_below="@+id/topcontent">

        <TextView
            android:id="@+id/text_thongbao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/Margin_padding16"
            android:fontFamily="sans-serif"
            android:text="Bạn có chắc chắn muốn Thoát?"
            android:textColor="@color/mauden"
            android:textSize="@dimen/TextSize15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_thongbao"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/Margin_padding5"
            android:gravity="center">

            <Button
                android:id="@+id/accept_dialog"
                android:layout_width="@dimen/width_button_Dialog_exitapp"
                android:layout_height="@dimen/heith_button_Dialog_exitapp"
                android:layout_marginRight="@dimen/Margin_padding24"
                android:background="@drawable/buttonnew"
                android:text="đồng ý"
                android:textSize="@dimen/TextSize12"
                android:textColor="@color/mautrang" />

            <Button
                android:id="@+id/refuse_dialog"
                android:layout_width="@dimen/width_button_Dialog_exitapp"
                android:layout_height="@dimen/heith_button_Dialog_exitapp"
                android:background="@drawable/test"
                android:text="hủy bỏ"
                android:textSize="@dimen/TextSize12"
                android:textColor="@color/maucam" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>