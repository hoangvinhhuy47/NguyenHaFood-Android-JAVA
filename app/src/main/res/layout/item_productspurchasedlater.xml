<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/heith_item_activityLateproduct"
    android:layout_marginBottom="@dimen/Margin_padding5"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/top1"
            android:layout_width="@dimen/width_img_Item_activityLateproduct"
            android:layout_height="@dimen/heith_img_Item_activityLateproduct"
            app:cardCornerRadius="@dimen/Margin_padding4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/image_productbuylater"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:textSize="@dimen/TextSize12"
                    android:id="@+id/special_price_productbuylater"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/textview_backgroud"
                    android:text="-5%"
                    android:textColor="@color/mautrang"></TextView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:paddingTop="@dimen/Margin_padding3"
            android:paddingRight="@dimen/Margin_padding5"
            android:paddingBottom="@dimen/Margin_padding3"
            android:id="@+id/top4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/top1">

            <TextView
                android:textAllCaps="true"
                android:id="@+id/name_product_buylater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/Margin_padding8"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="ĐUÔI THĂNG BÒ ĐÔNG LẠNH - ĐUÔI THĂNG BÒ ĐÔNG LẠNH"
                android:textColor="@color/mauden"
                android:textSize="@dimen/TextSize13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_product_buylater">

                <TextView
                    android:id="@+id/sellprice_productbuylate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Margin_padding4"
                    android:layout_marginTop="@dimen/Margin_padding8"
                    android:gravity="center"
                    android:text="2.530.000 đ"
                    android:textColor="@color/maudo"
                    android:textSize="@dimen/TextSize12" />

                <TextView
                    android:id="@+id/sale_price_productbuylate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/Margin_padding4"
                    android:layout_marginTop="@dimen/Margin_padding8"
                    android:gravity="center"
                    android:text="2.530.000 đ"
                    android:textColor="#A3A2A2"
                    android:textSize="@dimen/TextSize10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/see_imfomation_productbuylater"
                    android:layout_width="@dimen/width_button_item_activityLateproduct"
                    android:layout_height="@dimen/heith_button_item_activityLateproduct"
                    android:layout_marginTop="@dimen/Margin_padding8"
                    android:layout_marginRight="@dimen/Margin_padding8"
                    android:background="@drawable/seeview"></ImageView>

                <ImageView
                    android:id="@+id/add_tocart_productbuylater"
                    android:layout_width="@dimen/width_button_item_activityLateproduct"
                    android:layout_height="@dimen/heith_button_item_activityLateproduct"
                    android:layout_marginTop="@dimen/Margin_padding8"
                    android:layout_marginRight="@dimen/Margin_padding8"
                    android:background="@drawable/cart_view"></ImageView>
            </LinearLayout>

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit_product_later"
                style="@style/SpinKitView.Small.ThreeBounce"
                android:layout_width="@dimen/width_SpinKitView_Item_activityLateproduct"
                android:layout_height="@dimen/heith_SpinKitView_Item_activityLateproduct"
                android:layout_centerInParent="true"
                android:visibility="gone">

            </com.github.ybq.android.spinkit.SpinKitView>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>