<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/maucam"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/heith_top_Activity_shareapp">
                <ImageView
                    android:id="@+id/icon_backConnect"
                    android:layout_marginLeft="@dimen/Margin_padding4"
                    android:layout_width="@dimen/width_icon"
                    android:layout_height="@dimen/heith_icon"
                    android:background="@mipmap/back"
                    android:layout_centerVertical="true">
                </ImageView>

            </RelativeLayout>
            <LinearLayout
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Kết nối"
                    android:textSize="@dimen/TextSize14"
                    android:layout_centerInParent="true"
                    android:textColor="@color/mautrang" />
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/top2"
            android:layout_below="@id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Margin_padding12"
            android:layout_marginRight="@dimen/Margin_padding15"
            android:layout_marginTop="@dimen/Margin_padding15">
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/top3"
                    android:layout_width="@dimen/width_icon"
                    android:layout_height="@dimen/heith_icon"
                    android:background="@drawable/facebook"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_toRightOf="@id/top3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liên kết Facebook"
                    android:textSize="@dimen/TextSize12"
                    android:textColor="@color/mauden"
                    android:layout_marginLeft="@dimen/Margin_padding8"
                    android:gravity="center"/>
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/Margin_padding5"
            android:layout_marginRight="@dimen/Margin_padding5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Margin_padding1"
            android:background="@color/mauxam"
            android:layout_below="@id/top2"
            android:layout_marginTop="@dimen/Margin_padding5">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/top4"
            android:layout_below="@id/top2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Margin_padding12"
            android:layout_marginRight="@dimen/Margin_padding15"
            android:layout_marginTop="@dimen/Margin_padding15">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/top5"
                    android:layout_width="@dimen/width_icon"
                    android:layout_height="@dimen/heith_icon"
                    android:background="@drawable/zalo"/>
                <TextView
                    android:layout_toRightOf="@id/top5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Liên kết Zalo"
                    android:textSize="@dimen/TextSize12"
                    android:textColor="@color/mauden"
                    android:layout_marginLeft="@dimen/Margin_padding8"
                    android:gravity="center"/>
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/Margin_padding5"
            android:layout_marginRight="@dimen/Margin_padding5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Margin_padding1"
            android:background="@color/mauxam"
            android:layout_below="@id/top4"
            android:layout_marginTop="@dimen/Margin_padding5">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/top6"
            android:layout_below="@id/top4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/Margin_padding12"
            android:layout_marginRight="@dimen/Margin_padding15"
            android:layout_marginTop="@dimen/Margin_padding15">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/top7"
                    android:layout_width="@dimen/width_icon"
                    android:layout_height="@dimen/heith_icon"
                    android:background="@drawable/google"/>
                <TextView
                    android:layout_toRightOf="@id/top7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liên kết Google"
                    android:textSize="@dimen/TextSize12"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/mauden"
                    android:layout_marginLeft="@dimen/Margin_padding4"
                    android:gravity="center"/>
            </LinearLayout>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="@dimen/Margin_padding5"
            android:layout_marginRight="@dimen/Margin_padding5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Margin_padding1"
            android:background="@color/mauxam"
            android:layout_below="@id/top4"
            android:layout_marginTop="@dimen/Margin_padding5">
        </LinearLayout>
    </RelativeLayout>
</ScrollView>