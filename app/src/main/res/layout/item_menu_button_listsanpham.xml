<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/Margin_padding5"
    android:layout_marginTop="@dimen/Margin_padding5"
    android:layout_marginRight="@dimen/Margin_padding5"
    android:padding="@dimen/Margin_padding5"
    app:cardCornerRadius="5dp"
    tools:ignore="MissingDefaultResource">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/motasanpham"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_img"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/heith_img_Item_menu_sanpham"
                app:cardCornerRadius="5dp">
                <ImageView
                    android:id="@+id/img_sanphammenu"
                    android:layout_width="@dimen/width_img_Item_menu_sanpham"
                    android:layout_height="match_parent"></ImageView>

                <TextView
                    android:id="@+id/specialPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/textview_backgroud"
                    android:text="-5%"
                    android:textColor="@color/mautrang"
                    android:textSize="@dimen/TextSize10"></TextView>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/heith_img_Item_menu_sanpham"
                android:layout_marginLeft="@dimen/Margin_padding5"
                android:layout_marginTop="@dimen/Margin_padding5"
                android:layout_toRightOf="@+id/cardview_img">

                <TextView
                    android:id="@+id/ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="monospace"
                    android:maxLines="2"
                    android:text=""
                    android:textColor="@color/mauden"
                    android:textSize="@dimen/TextSize11"></TextView>

                <TextView
                    android:id="@+id/giatien"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ten"
                    android:layout_marginTop="@dimen/Margin_padding5"
                    android:gravity="top|center"
                    android:text=""
                    android:textColor="@color/mauden"
                    android:textSize="@dimen/TextSize11"></TextView>

                <TextView
                    android:id="@+id/giatien1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ten"
                    android:layout_marginLeft="@dimen/Margin_padding5"
                    android:layout_marginTop="@dimen/Margin_padding5"
                    android:layout_toRightOf="@id/giatien"
                    android:gravity="top|center"
                    android:text=""
                    android:textColor="#757272"
                    android:textSize="@dimen/TextSize8"></TextView>

                <TextView
                    android:id="@+id/giaonhanh"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/heith_text_giaohangnhanh_item_menu_sanpham"
                    android:layout_below="@+id/giatien"
                    android:layout_marginTop="@dimen/Margin_padding7"
                    android:gravity="left|center"
                    android:text="  Giao Hàng Nhanh 3h."
                    android:textColor="@color/mauxanh"
                    android:textSize="@dimen/TextSize8"></TextView>

                <LinearLayout
                    android:id="@+id/topabc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/giaonhanh"
                    android:layout_marginTop="@dimen/Margin_padding5">

                    <RatingBar
                        android:id="@+id/rating_product_menu"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="0"
                        android:stepSize="0.1"></RatingBar>

                    <TextView
                        android:id="@+id/totalrating_product_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/Margin_padding1"
                        android:hint="(80)"
                        android:textSize="@dimen/TextSize5"></TextView>
                </LinearLayout>

                <Button
                    android:id="@+id/chonsp"
                    android:layout_width="@dimen/width_button_item_menu_sanpham"
                    android:layout_height="@dimen/heith_button_item_menu_sanpham"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/Margin_padding15"
                    android:layout_marginBottom="@dimen/Margin_padding5"
                    android:background="@drawable/test"
                    android:gravity="center"
                    android:text="Thêm Giỏ Hàng"
                    android:textColor="@color/maucamnhat"
                    android:textSize="@dimen/TextSize8"
                    tools:ignore="RtlCompat"></Button>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/Margin_padding1"
                android:layout_marginLeft="@dimen/Margin_padding5"
                android:layout_marginTop="@dimen/Margin_padding5"
                android:layout_marginRight="@dimen/Margin_padding5"></LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>