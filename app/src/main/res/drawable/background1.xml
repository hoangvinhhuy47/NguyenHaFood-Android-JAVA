<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />`
                    <gradient android:angle="270" android:endColor="#F6EBC7" android:startColor="#E3E7FB" />
                    <corners android:radius="15dp" />
                    <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#FFFFFF" />
                    <corners android:radius="8dp" />
                </shape>
            </item>
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp" />`
                    <gradient android:angle="270" android:endColor="#FBD177" android:startColor="#ffffff" />
                    <corners android:radius="15dp" />
                    <padding android:bottom="10dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>